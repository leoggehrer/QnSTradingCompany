@*@QnSGeneratedCode*@
@inherits FieldSetComponent
@using Radzen;
@using TModel = QnSTradingCompany.BlazorApp.Models.Persistence.Configuration.Setting;

@if (CanFieldCreate(nameof(EditModel.AppName)))
{
    <div class="row">
        <div class="col-md-4 align-items-center d-flex">
            <RadzenLabel Text="@TranslateFor(nameof(EditModel.AppName))" />
        </div>
        <div class="col-md-8" style="margin-top: 16px;">
            <RadzenTextArea @bind-Value="@EditModel.AppName" MaxLength="128" Name="@TranslateFor(nameof(EditModel.AppName))" Style="width: 100%;" />
            <RadzenRequiredValidator Text="@TranslateFor(nameof(EditModel.AppName) + " is required")" Component="@TranslateFor(nameof(EditModel.AppName))" Popup="false" />
        </div>
    </div>
}

